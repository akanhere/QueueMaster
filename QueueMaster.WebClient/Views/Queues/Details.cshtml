            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => queueItem.QueuedUserDisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => queueItem.QueueCurrentPosition)
                    </td>
                    <td>
                        @Html.DisplayFor(m => queueItem.QueuedAtTime)
                    </td>
                    <td>
                        @Html.DisplayFor(m => queueItem.StatusDescription)
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a asp-action="ItemEdit" asp-route-id="@queueItem.QueueItemId" class="btn btn-primary">Edit</a>
                            <a asp-action="ItemDelete" asp-route-id="@queueItem.QueueItemId" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
